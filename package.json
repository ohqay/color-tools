{
  "name": "color-tools",
  "version": "1.0.0",
  "description": "A Model Context Protocol (MCP) server that enables Claude to convert colors between different formats (hex, RGB, HSL, CMYK) and generate color harmonies",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "color-tools": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/index.ts",
    "start": "node dist/index.js",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest watch",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "keywords": [
    "mcp",
    "color",
    "converter",
    "rgb",
    "hsl",
    "hsb",
    "cmyk",
    "hex"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.12.1",
    "@types/node": "^24.0.1",
    "tsx": "^4.20.1",
    "typescript": "^5.8.3"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.34.0",
    "@typescript-eslint/parser": "^8.34.0",
    "@vitest/coverage-v8": "^2.1.8",
    "eslint": "^9.28.0",
    "eslint-config-prettier": "^10.1.5",
    "typescript-eslint": "^8.34.0",
    "vitest": "^2.1.8"
  }
}
